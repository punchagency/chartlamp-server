{
  "compilerOptions": {
    "target": "esnext",

    "module": "commonjs",

    "outDir": "./dist",

    "rootDir": "./src",

    "strict": true,

    "esModuleInterop": true,

    "resolveJsonModule": true,

    "skipLibCheck": true,

    "sourceMap": true,
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist", "k8s", "terraform", ".github"]
}
